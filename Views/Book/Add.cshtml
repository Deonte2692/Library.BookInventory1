@model Library.BookInventory.Models.Book

@{
    Layout = "_Layout";  // Ensure layout is used
}

<div class="container mt-4">
    <h2 class="text-center">Add New Book</h2>

    <form asp-action="Add" method="post" class="bg-light p-4 rounded shadow-sm">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                Please correct the errors below.
            </div>
        }

        <div class="form-group">
            <label for="Title">Title</label>
            <input type="text" id="Title" name="Title" class="form-control" value="@Model.Title" required />
        </div>

        <div class="form-group">
            <label for="Author">Author</label>
            <input type="text" id="Author" name="Author" class="form-control" value="@Model.Author" required />
        </div>

        <div class="form-group">
            <label for="Category">Category</label>
            <input type="text" id="Category" name="Category" class="form-control" value="@Model.Category" required />
        </div>

        <button type="submit" class="btn btn-success btn-block mt-3">Add Book</button>
    </form>

    <a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Back to Book List</a>
</div>
